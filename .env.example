# Visit Tracker Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Settings
NODE_ENV=production
PORT=3000
VERSION=latest

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=visit_tracker
DB_USER=visit_tracker_user
DB_PASSWORD=visit_tracker_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# Security Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-make-it-long-and-random
API_KEY_PREFIX=sk-vt

# CORS Settings
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info

# Optional: External Database (if not using Docker Compose database)
# DB_HOST=your-external-db-host
# DB_PORT=5432
# DB_NAME=visit_tracker
# DB_USER=your-db-user
# DB_PASSWORD=your-db-password
# DB_SSL=true

# Optional: External Redis (if not using Docker Compose redis)
# REDIS_HOST=your-external-redis-host
# REDIS_PORT=6379
# REDIS_PASSWORD=your-redis-password
# REDIS_TLS=true

# Optional: Email Configuration (for notifications)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# SMTP_FROM=Visit Tracker <noreply@yourdomain.com>

# Optional: Analytics and Monitoring
# ANALYTICS_ENABLED=true
# SENTRY_DSN=your-sentry-dsn
# GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
